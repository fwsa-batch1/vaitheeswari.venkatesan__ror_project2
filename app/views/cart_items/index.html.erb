<div class="container">
  <h4 class="MenuCategory-Title Cart">Cart</h4>
  <% if !@cart_items.empty? %>
    <p class="Right"><%= link_to 'Delete Cart', destroy_cart_path,  method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <%=render partial:"items", locals: {cart:@cart,cart_items:@cart_items }%>
    <%=form_with(url:orders_path(id:@cart.id) ,method:"post",class:"MenuCategoryAdd") do%>
      <%=submit_tag nil,class:"card_checkout_btn",value:"Confirm Order"%>
    <%end%>
  <% else %>
    <div class="empty_cart">
      <h5>Your cart is empty
      </h5>
    </div>
  <% end %>
</div>
