<div class="container">
  <%= link_to "Back To Shopping",menu_categories_path %>
  <h1 class="Cart-Title"><%= user %> <%=section_title %></h1>
  <% if !orders.empty? %>
    <table class="table">
      <thead>
        <tr>
          <th>Order Id</th>
          <th>Order Total</th>
          <th>Order Placed on</th>
          <th>Order Placed at</th>
          <% if @current_user.is_owner? %>
            <th>Mark As Delivered</th>
          <% else %>
            <th>Delivered at</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% orders.each do |order|%>
          <tr class="Category">
            <td class="Cart-Item"><%=link_to order.id,orders_path(id:order.id) %></td>
            <td class="Cart-Item"><%= order.total_price %></td>
            <td class="Cart-Item"><%= order.order_placed %></td>
            <td class="Cart-Item"><%= order.created_at.strftime("%I:%M %P") %></td>
            <% if (@current_user.is_owner? || @current_user.is_clerk?) && order.delivered_at == "Pending" %>
              <td>
                <%=form_with(url:order_path(id:order.id) ,method:"put",class:"MenuCategoryAdd") do%>
                  <%=submit_tag nil,class:"MenuCategoryAdd-Button",value:"Pending"%>
                <%end%>
              </td>
            <% else %>
              <td class="Cart-Item"><%= order.delivered_at %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h3>No <%= section_title %> Yet</h3>
  <% end %>
</div>
<%= pagy_bootstrap_nav(@pagy).html_safe%>
